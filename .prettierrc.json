{
  "arrowParens": "avoid",
  "tabWidth": 2,
  "semi": false,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^react$",
    "^next(.*)$",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "<TYPES>^(node:)",
    "<TYPES>",
    "<TYPES>^[.]",
    "^@/types/(.*)$",
    "",
    "^@/utils/(.*)$",
    "^@/constants/(.*)$",
    "^@/store/(.*)$",
    "",
    "^@/hooks/(.*)$",
    "",
    "^@/components/(.*)$",
    "",
    "^[.]"
  ]
}
